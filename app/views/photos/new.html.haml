%h1 Add a Photo
= form_for Photo.new(), :url => user_photos_path, :html => {:multipart => true} do |form|
  - if @photo.errors.any?
    - @photo.errors.full_messages.each do |msg|
      %h4= msg   
  
  = form.label :title
  %br
  = form.text_field :title
  = form.file_field :image
  = form.submit 'Upload'

%br/
.row.top_row
  .col-sm-6.user_att
    = link_to 'Go Back', user_path(params[:user_id]), class: ['btn', 'btn-default']
