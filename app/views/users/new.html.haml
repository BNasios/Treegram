%h1 Sign Up
= form_for User.new, class: "form-inline" do |f|
  - if @user.errors.any?
    - @user.errors.full_messages.each do |msg|
      %h4= msg   

  = f.label :email
  = f.text_field :email
  = f.label :password
  = f.password_field :password
  = f.label :password_confirmation
  = f.password_field :password_confirmation
  %br/
  = f.label :avatar, 'Upload Avatar'
  = f.file_field :avatar
  %br/
  = f.submit "Sign Up"

%br/
.row.top_row
  .col-sm-6.user_att
    = link_to 'Go Back', home_path, class: ['btn', 'btn-default']
